---
import { ViewTransitions } from 'astro:transitions'
import Footer from '@/components/Footer/Footer.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Aprenda a vender suas consultorias na primeira conversa com os seus leads" />
		<meta name="keywords" content="mentoria, consultoria, leads, vender, vendas, conversão, tráfego, marketing, follow-up, venda por call," />
		<meta name="author" content="Samuel Pereira" />
		<meta name="robots" content="noindex, nofollow" />
		<meta name="googlebot" content="noindex, nofollow" />
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#09090b">
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="min-h-dvh w-full bg-zinc-950 text-zinc-50">
		<slot />
		<Footer />
	</body>
</html>