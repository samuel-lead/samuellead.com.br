---
import { ViewTransitions } from 'astro:transitions'
import Footer from '@/components/Footer/Footer.astro'
import Separator from '@/components/Separator.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<!-- Google Tag Manager -->
    <script is:inline>
		(function (w, d, s, l, i) {
      w[l] = w[l] || []; w[l].push({
        'gtm.start':
          new Date().getTime(), event: 'gtm.js'
      }); var f = d.getElementsByTagName(s)[0],
        j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
          'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
    })(window, document, 'script', 'dataLayer', 'GTM-WL8SXD6D');</script>
    <!-- End Google Tag Manager -->

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<!-- TODO: adicionar o domínio SAMUELLEAD.COM.BR -->
		<meta property="og:url" content="https://samuellead-com-br.vercel.app/images/hero/bg-large.webp" />
		<meta property="og:title" content="Venda na Primeira Conversa | Samuel Pereira" />
		<meta property="og:description" content="Aprenda a vender seus serviços e consultorias de 3 a 5 mil na primeira conversa com seus leads." />
		<meta property="og:image" content="https://samuellead-com-br.vercel.app/images/hero/bg-large.webp" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://samuellead-com-br.vercel.app/images/hero/bg-large.webp" />
		<meta property="twitter:title" content="Venda na Primeira Conversa | Samuel Pereira" />
		<meta property="twitter:description" content="Aprenda a vender seus serviços e consultorias de 3 a 5 mil na primeira conversa com seus leads." />
		<meta property="twitter:image" content="https://samuellead-com-br.vercel.app/images/hero/bg-large.webp" />

		<meta charset="UTF-8" />
		<meta name="description" content="Aprenda a vender suas consultorias na primeira conversa com os seus leads" />
		<meta name="keywords" content="mentoria, consultoria, leads, vender, vendas, conversão, tráfego, marketing, follow-up, venda por call," />
		<meta name="author" content="Samuel Pereira" />
		<meta name="robots" content="noindex, nofollow" />
		<meta name="googlebot" content="noindex, nofollow" />
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#09090b">
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="min-h-dvh w-full bg-zinc-950 text-zinc-50">
		<!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WL8SXD6D" height="0" width="0"
			style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->

		<slot />
		<Separator />
		<Footer />

	</body>
</html>