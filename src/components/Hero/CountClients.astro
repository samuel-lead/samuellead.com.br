---
import { Badge } from '@/components/ui/badge'
import { clients } from '@/data/clients'
---

<Badge className="w-fit font-normal text-sm text-zinc-400 bg-zinc-700/25 border border-zinc-500/25 hover:bg-zinc-700/25">
  {clients.map(client => (
    <img 
      class="h-8 w-8 rounded-full border-4 border-zinc-900 -ml-2.5 first:ml-0" 
      src={client.image} 
      alt={client.name} 
    />
  ))}
  +30 alunos satisfeitos.
</Badge>