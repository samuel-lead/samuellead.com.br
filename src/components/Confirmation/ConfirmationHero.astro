---
import Container from "@/components/Container.astro";
import WhatsApp from "@/components/WhatsApp.astro";
import CTA from "@/components/CTA.astro";
import { linkGroupWhatsApp } from "@/data/contact";

---

<section class="relative min-h-dvh h-full w-full md2:flex justify-center items-center bg-[url('/images/confirmation/bg-confirmation-small.webp')] md2:bg-[url('/images/confirmation/bg-confirmation-large.webp')] bg-top bg-cover bg-no-repeat">
  <div class="w-full h-full bg-gradient-to-b from-transparent to-zinc-950/90">
    <Container class='min-h-dvh h-full flex justify-center items-center px-5'>
      <div class="max-w-3xl flex flex-col items-center gap-8 pb-28 md2:py-16 mt-auto md2:mt-0">
        <img class="h-10" src="/images/logo.svg" alt="Logo Aula Magna" >
        
        <div class="flex flex-col gap-4">
          <h1 class="font-semibold text-2xl sm:text-3xl text-center text-pretty leading-tight uppercase">
            A sua inscrição já está <span class="bg-gradient-to-r from-yellow-500 from-0% via-yellow-400 via-30% to-yellow-200 to-110% text-transparent bg-clip-text">garantida.</span>
          </h1>
          <h2 class="max-w-lg text-center text-zinc-400 text-pretty leading-normal mx-auto">
            Agora, você precisa entrar no grupo de WhatsApp. É por lá que você será notificado e receberá o link da aula. 
          </h2>
        </div>
        
        <CTA url={linkGroupWhatsApp}>
          Entrar no grupo
          <WhatsApp />
        </CTA>
      </div>
    </Container>
  </div>
</section>